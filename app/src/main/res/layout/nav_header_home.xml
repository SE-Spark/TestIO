<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#A9C0FF"
    android:orientation="vertical"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/menu_head_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arise and shine"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/menu_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="Green Valley"
        android:layout_above="@id/menu_head_description"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_domain" />
    <ImageView
        android:id="@+id/descp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@mipmap/ic_school"
        android:layout_alignParentRight="true" />
</RelativeLayout>